package layouts

type Layout struct {
  Title       string
  ShowHeader  bool
  BodyClass   string
}

templ Base(l Layout) {
  <!DOCTYPE html>
  <html lang="en">
  <head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="htmx-config" content='{"includeIndicatorStyles":false}'/>
    <title>Gin Boilerplate - { l.Title }</title>
    <link rel="stylesheet" href="/static/css/main.min.css"/>
    <script src="/static/js/htmx.min.js"></script>
  </head>
  <body class={ "min-h-screen bg-background text-foreground antialiased", l.BodyClass }>
    if l.ShowHeader {
      <header class="bg-accent text-accent-foreground">
        <div class="container mx-auto flex p-5 items-center">
          <div class="font-medium mr-auto"><a href="/">Gin Boilerplate</a></div>
          <div hx-get="/auth/user-menu" hx-swap="outerHTML" hx-trigger="load"></div>
        </div>
      </header>
    }
    { children... }
  </body>
  </html>
}